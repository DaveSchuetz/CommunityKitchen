<h2>Comments</h2>
  {{#if recipe.comments}}
  {{#each recipe.comments}}
    <div class="comments">
      <section>
        <p>{{comment.content}}</p>
        <h4>Posted by {{comment.author.local.screenName}}</h4>
      </section>
    <p><a href="/comment/{{comment.id}}/edit">Edit</a></p>
    <form action="/comment/{{comment.id}}?_method=DELETE" method="POST">
      <input type="submit" value="Remove comment">
    </form>
    </div>
  {{/each}}
  {{else}}
    <p>No Comments Yet</p>
  {{/if}}
  <form action="/recipe/{{recipe.id}}/comments?_method=PUT" method="PUT">
        <p><textarea rows="4" cols="50" name="content" placeholder="Leave a comment..."></textarea>
        </p>
        <input class="btn" type="submit">
  </form>