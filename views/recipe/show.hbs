<section>
    <h2>{{recipe.name}}</h2>
    <h3>Ingredients</h3>
    <p>{{recipe.ingredient}}</p>
    <h3>Directions</h3>
    <p>{{recipe.directions}}</p>
    <h3>Description</h3>
    <p>{{recipe.description}}</p>
    <h3>More Info</h3>
    <p>{{recipe.more}}</p>
    <h4>Posted by Chef {{recipe.author.local.screenName}}</h4>
</section> 
<form action="/recipe/{{recipe.id}}?_method=DELETE" method="POST">
  <input type="submit" value="Remove recipe">
  </form>