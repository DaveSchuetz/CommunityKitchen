<section>
  <h2>Welcome Back {{user.local.screenName}}</h2>
  <img src="../images/chef.jpg" alt ="Chef Image">
  <form action="/user/{{user.id}}?_method=DELETE" method="POST">
  <input type="submit" value="Remove account">
  </form>
  <h3>Cookbooks</h3>
  {{#if user.cookbooks}}
    <div class="cookbooks">
      {{#each user.cookbooks}}
         {{> 'cookbook'}}
      {{/each}}
    </div>
  {{else}}
    <p>No Cookbooks yet</p>
  {{/if}}
  <h3>Recipes</h3>
  {{#if user.recipes}}
    <div class="recipes">
      <a href="/user/{{currentUser._id}}/recipes">Recipes</a>
    </div>
  {{else}}
    <p>No Recipes yet</p>
  {{/if}}
  
</section>