<section>
    {{#if message}}
        <div>{{message}}</div>
    {{/if}}
    <h3>Login</h3>
    <form action="/user/login" method="POST">
        <p>
            <input type="email" name="email" placeholder="Email">
        </p>
        <p>
            <input type="password" name="password" placeholder="Password">
        </p>
        <input class="btn" type="submit">
    </form>
</section>